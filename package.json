  "scripts": {
    "start": "webpack-dev-server --config tools/webpack.config.ts --mode development",
    "build": "rm -rf ./build & webpack --config tools/webpack.config.ts --mode production",
    "lint:ts": "tslint \"{src, tools}/**/*.{ts,tsx}\"",
    "lint:css": "stylelint \"{src,tools}/**/*.{css,less,scss,sass}\"",
    "lint": "yarn lint:ts && yarn lint:css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,ts,tsx}": [
        "tslint \"{src, tools}/**/*.{ts,tsx}\"",
        "prettier --write",
        "git add"
      ],
      "*.{css,less,scss,sass}": [
        "stylelint \"{src,tools}/**/*.{css,less,scss,sass}\"",
        "prettier --write",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json"
    ]
  }
